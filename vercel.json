{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.go",
      "use": "@vercel/go",
      "config": {
        "includeFiles": [
          "pkg/**/*.go",
          "configs/**/*.go",
          "configs/**/*.yaml",
          "go.mod",
          "go.sum"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "/api/index.go"
    },
    { "handle": "filesystem" },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ]
}
